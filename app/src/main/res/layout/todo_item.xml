<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/wood_rectangle_full_border"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/x_button"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginStart="23dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/x_white_dropshadow" />

    <TextView
        android:id="@+id/todo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@id/x_button"
        android:layout_toRightOf="@id/x_button"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.1"
        android:text="23. First Exam"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >
        <TextView
            android:id="@+id/coin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="0.1"
            android:text="+10"
            android:textColor="@color/white"
            android:textSize="12dp"/>

        <ImageView
            android:id="@+id/money_pic"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginTop="18dp"
            android:layout_gravity="top|right"
            android:layout_marginRight="12dp"
            android:src="@drawable/dollar_dropshadow" />
    </LinearLayout>


<ImageView
        android:id="@+id/cal_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="-2dp"
        android:layout_below="@id/todo_name"
        android:layout_toEndOf="@id/x_button"
        android:layout_toRightOf="@id/x_button"
        android:src="@drawable/pixel_calendar_dropshadow_5"
        />

    <TextView
        android:id="@+id/todo_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cal_pic"
        android:layout_below="@+id/todo_name"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="May 23, 2015"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/press_start_2p"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.1"
        />

    <ImageView
        android:id="@+id/clock_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="-2dp"
        android:layout_below="@id/todo_date"
        android:layout_toEndOf="@id/x_button"
        android:layout_toRightOf="@id/x_button"
        android:src="@drawable/pixel_clock_dropshadow"
        />

    <TextView
        android:id="@+id/todo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todo_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/clock_pic"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.1"
        android:text="11:59 pm"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/comment_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="-2dp"
        android:layout_below="@+id/todo_time"
        android:layout_toEndOf="@id/x_button"
        android:layout_toRightOf="@id/x_button"
        android:src="@drawable/pixel_comment_dropshadow"
        />

    <TextView
        android:id="@+id/todo_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todo_time"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@+id/comment_pic"
        android:fontFamily="@font/press_start_2p"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.1"
        android:text="Comment about assignment goes here"
        android:textColor="@color/white"
        android:textSize="12sp" />

